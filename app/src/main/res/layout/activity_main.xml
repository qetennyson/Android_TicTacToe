<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.qetennyson.tictactoe.MainActivity">

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/textView0"
        android:layout_marginTop="96dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView4"
        android:onClick="onClick"
        android:text=" "
        android:textSize="80dp"
        android:backgroundTint="#b0a3e5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#eb4346e0"
        android:padding="10dp" />


    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/textView1"
        android:layout_alignTop="@+id/textView0"
        android:layout_toEndOf="@+id/textView0"
        android:onClick="onClick"
        android:text=" "
        android:textSize="80dp"
        android:backgroundTint="#b0a3e5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#eb4346e0"
        android:padding="10dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView1"
        android:layout_toEndOf="@+id/textView1"
        android:onClick="onClick"
        android:text=" "
        android:textSize="80dp"
        android:backgroundTint="#b0a3e5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#eb4346e0"
        android:padding="10dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView0"
        android:layout_alignEnd="@+id/textView0"
        android:onClick="onClick"
        android:text=" "
        android:textSize="80dp"
        android:backgroundTint="#b0a3e5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#eb4346e0"
        android:padding="10dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text=" "
        android:textSize="80dp"
        android:backgroundTint="#b0a3e5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#eb4346e0"
        android:padding="10dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/textView1"
        android:onClick="onClick"
        android:text=" "
        android:textSize="80dp"
        android:backgroundTint="#b0a3e5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#eb4346e0"
        android:padding="10dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:onClick="onClick"
        android:text=" "
        android:textSize="80dp"
        android:backgroundTint="#b0a3e5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#eb4346e0"
        android:padding="10dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text=" "
        android:textSize="80dp"
        android:backgroundTint="#b0a3e5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#eb4346e0"
        android:padding="10dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/textView8"
        android:onClick="onClick"
        android:text=" "
        android:textSize="80dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/stateView"
        android:backgroundTint="#b0a3e5"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:background="#eb4346e0"
        android:padding="10dp" />

    <!-- button is intended to run the clearState method, but having trouble binding the onClick event !-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" "
        android:id="@+id/stateView"
        android:layout_toStartOf="@+id/textView2"
        android:layout_alignBaseline="@+id/textView0"
        android:layout_alignBottom="@+id/textView0" />

</RelativeLayout>
